@model SeaBase.ViewModel.ApplicantVM
<div class="modal fade" id="LOG">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modal-title">Letter of Guarantee</h4>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label>Kindly Choose signatory:</label>
                    @Html.DropDownList("logPositionId", new SelectList(Model.Users, "Id", "Position"), "Select Signatory", new {@class = "form-control"})
                </div>
                <div class="form-group">
                        <label>Agent:</label>
                        @Html.DropDownList("logAgentId", new SelectList(Model.Agents, "Id", "AgentName"), "Select Agent", new { @class = "form-control" })
                    </div>
                <div class="form-group">
                    <label>Date Generated</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control" id="logDateGenerated" name="logDateGenerated"/>
                    </div>
                </div>
                <div class="form-group">
                    <label>Date Travelling</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control" id="logDateTravelling" name="logDateTravelling"/>
                    </div>
                </div>
                <div class="form-group">
                    <label>Date Actual Embarkation</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control" id="logDateEmbarkation" name="logDateEmbarkation" />
                    </div>
                </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="btnSaveLog">View</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<div class="modal fade" id="DutchContract">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modal-title">Dutch Contract</h4>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label>Scale Number</label>
                    <input type="text" class="form-control" id="dcscaleno" name="dcscaleno" />
                </div>
                
                <div class="form-group">
                    <label>Date</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control" id="dcdate" name="dcdate" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Principal</label>
                    <select id="dcprincipal" name="dcprincipal" class="form-control">
                        <option value="Marin">Marin</option>
                        <option value="Others">Others</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnViewDutchContract">View</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


