@Styles.Render("~/AdminLTE/plugins/datepicker/styles")
@Styles.Render("~/AdminLTE/plugins/datatables/styles")

@{
    ViewBag.Title = "Crews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>
    Crew Information
</h4>


<!-- Main content -->
<section class="row">

  
        <div class="col-md-3">

            <!-- Profile Image -->
